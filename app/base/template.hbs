<div id="header" class="pv3 bg-black white">
  <span class="ph4">
    △
  </span>
  <span class="b white helvetica">
    rankables
  </span>
  <button class="fr bg-white black bn dn-ns dib mr3">
    =
  </button>
</div>

<div>
</div>

<div class="flex flex-wrap">
  <div class="w-25-ns w-100 db-m db-l vh-100 bg-black-10">
    <div class="lh-copy f5 fw6 black">
      <div class="helvetica flex dib link dim pv2 ph2">
      </div>

      {{#each model as |rankableGroup|}}
        {{#link-to "base.tasks" rankableGroup.title
        classNames="helvetica flex f5 dib black link dim pv2 ph2 db-ns dn"}}
          <span class="w-10 ph1">✦</span>
          <span class="w-80 ph1">{{rankableGroup.title}}</span>
          <span class="w-10 ph1 fr">{{rankableGroup.rankables.length}}</span>
        {{/link-to}}
      {{/each}}

      <form
        class="flex db pv2 ph2 helvetica"
        onsubmit={{action "createRankableGroup" rankableGroupTitle store}}>
          <span class="w-10 ph1">✦</span>
          <input
            name="rankable-group-title"
            class="db bg-transparent bn w-90"
            value={{rankableGroupTitle}}
            onchange={{action (mut rankableGroupTitle) value="target.value"}}
            placeholder="New list">
      </form>
    </div>
  </div>

  <div class="w-75-ns w-100 mw-100">
    {{outlet}}
  </div>
</div>
